<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Report_Manager_Mobile.Pages.Settings"
             BackgroundColor="{AppThemeBinding Dark={StaticResource BGDark}, Light={StaticResource BGLigth}}"
             Title="Settings"
             Loaded="ContentPage_Loaded">
    <VerticalStackLayout>
        <Label Text="Server" Margin="20,20,0,0"/>
        <Entry x:Name="EntryServerIP" Margin="20,0,20,0" Keyboard="Default" />
        <Button Text="Apply" Margin="20" Clicked="Button_Clicked"/>
        <Button Text="Send Log" Clicked="Button_Clicked_1"/>
        <Label x:Name="LblVersion" />
    </VerticalStackLayout>
</ContentPage>