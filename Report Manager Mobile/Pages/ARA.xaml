<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Report_Manager_Mobile.Pages.ARA"
             xmlns:lang="clr-namespace:Report_Manager_Mobile.Resources.Languages"
             xmlns:globals="clr-namespace:Report_Manager_Mobile.Data"
             BackgroundColor="{AppThemeBinding Dark={StaticResource BGDark}, Light={StaticResource BGLigth}}"
             Title="ARA">
    <ScrollView>
    <VerticalStackLayout Margin="20">
        <Border Margin="5"  
                        StrokeShape="RoundRectangle 8"
                        Padding="8"
                        StrokeThickness="1"
                        Background="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource BorderBGDark}}">
            <StackLayout>
                <Label Text="{x:Static globals:Globals.Costumer}" FontAttributes="Bold" TextColor="White" Margin="10" HorizontalTextAlignment="Center" HorizontalOptions="Center"/>
                <BoxView 
                            Color="White"
                                        HeightRequest="1"
                                        HorizontalOptions="Fill" />
                <HorizontalStackLayout HorizontalOptions="Center" Margin="10">

                    <Label Text="INSTALAÇÃO: " TextColor="White"/>
                    <Label Text="{x:Static globals:Globals.Facility}" TextColor="White"/>
                    <Label Text=" NS: " TextColor="White"/>
                    <Label Text="{x:Static globals:Globals.ServiceNote}" TextColor="White"/>

                </HorizontalStackLayout>

            </StackLayout>
                
        </Border>
        <Label Margin="0,20,0,0" Text="{x:Static lang:AppResource.ARA}" FontSize="18" HorizontalOptions="Center"/>
        <Border Margin="5"  
                        StrokeShape="RoundRectangle 8"
                        Padding="8"
                        StrokeThickness="1"
                        Background="{AppThemeBinding Light={StaticResource BorderBG}, Dark={StaticResource BorderBGDark}}">
            <StackLayout>
                <Label Text="{x:Static lang:AppResource.ARA1}" FontSize="15" HorizontalOptions="Center" Margin="10" />
                <BoxView 
                                        HeightRequest="1"
                                        HorizontalOptions="Fill" />
                <HorizontalStackLayout Margin="0">
                    <CheckBox Margin="0"/>
                    <Label 
                        Text="{x:Static lang:AppResource.ARA1_1}" Margin="0" VerticalTextAlignment="Center"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout>
                    <CheckBox />
                    <Label
                        Text="{x:Static lang:AppResource.ARA1_2}" VerticalTextAlignment="Center"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout>
                    <CheckBox />
                    <Label
                        Text="{x:Static lang:AppResource.ARA1_3}" VerticalTextAlignment="Center"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout>
                    <CheckBox />
                    <Label
                        Text="{x:Static lang:AppResource.ARA1_4}" VerticalTextAlignment="Center"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout>
                    <CheckBox />
                    <Label
                        Text="{x:Static lang:AppResource.ARA1_5}" VerticalTextAlignment="Center"/>
                </HorizontalStackLayout>


                <Editor x:Name="EditorMail" Placeholder="Ação" HeightRequest="50"/>
            </StackLayout>

        </Border>
            
        <Border Margin="5"  
                        StrokeShape="RoundRectangle 8"
                        Padding="8"
                        StrokeThickness="1"
                        Background="{AppThemeBinding Light={StaticResource BorderBG}, Dark={StaticResource BorderBGDark}}">
            <StackLayout>
                <Label Text="{x:Static lang:AppResource.ARA2}" FontSize="15" HorizontalOptions="Center" Margin="10" />
                <BoxView 
                                        HeightRequest="1"
                                        HorizontalOptions="Fill" />
                <HorizontalStackLayout Margin="0">
                    <CheckBox Margin="0"/>
                    <Label 
                        Text="{x:Static lang:AppResource.ARA2_1}" Margin="0" VerticalTextAlignment="Center"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout>
                    <CheckBox />
                    <Label
                        Text="{x:Static lang:AppResource.ARA2_2}" VerticalTextAlignment="Center"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout>
                    <CheckBox />
                    <Label
                        Text="{x:Static lang:AppResource.ARA2_3}" VerticalTextAlignment="Center"/>
                </HorizontalStackLayout>
                    


                <Editor Placeholder="Ação" HeightRequest="50"/>
            </StackLayout>

        </Border>

        <Border Margin="5"  
                        StrokeShape="RoundRectangle 8"
                        Padding="8"
                        StrokeThickness="1"
                        Background="{AppThemeBinding Light={StaticResource BorderBG}, Dark={StaticResource BorderBGDark}}">
            <StackLayout>
                <Label Text="{x:Static lang:AppResource.ARA2}" FontSize="15" HorizontalOptions="Center" Margin="10" />
                <BoxView 
                                        HeightRequest="1"
                                        HorizontalOptions="Fill" />
                <HorizontalStackLayout Margin="0">
                    <CheckBox Margin="0"/>
                    <Label 
                        Text="{x:Static lang:AppResource.ARA2_1}" Margin="0" VerticalTextAlignment="Center"/>
